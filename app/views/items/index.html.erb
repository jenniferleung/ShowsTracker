<table class="table table-hover">
  <thead>
    <tr>
      <th>Category</th>
      <th>Title</th>
      <th>Episode</th>
      <th></th>
    </tr>
  </thead>
  <% @items.each do |item| %>
    <tbody>
      <tr>
        <td><%= item.category%></td>
        <td><%= item.name %></td>
        <td><%= item.episode %></td>
        <td><button type="button" class="btn btn-default"><%= link_to "Edit", edit_item_path(item) %></button>
        <button type="button" class="btn btn-default"><%= link_to "Delete", item_path(item), method: :delete, data: {confirm: "Are you sure?"}  %></button></td>
      </tr>
    </tbody>
  <% end %>
</table>
<button type="button" class="btn btn-default"><%= link_to "Create", new_item_path %></button>
